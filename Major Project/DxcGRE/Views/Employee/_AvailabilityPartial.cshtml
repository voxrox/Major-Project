@model IEnumerable<DxcGRE.Models.dashboard>

@{
    ViewBag.Title = "Dashboard";
    Layout = null;
}

<style>
    table {
        border: 5px solid black;
        border-radius: 5px;
    }

    thead {
        background-color: black;
        opacity: 0.7;
        color: white
    }
</style>
<table class="table table-dark table-hover" style="border-radius:5px">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Booking Type
            </th>
            <th>
                Room
            </th>
            <th>
                Date From
            </th>
            <th>
                Date To
            </th>
            <th>
                Booking Status
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in ViewBag.availabledates)
    {
        <tr>
            <td>
                @item.EmpID
            </td>
            <td>
                @item.BookingType
            </td>
            <td>
                @item.RoomName
            </td>
            <td>
                @item.DateFrom
            </td>
            <td>
                @item.DateTo
            </td>
            <td>
                @item.BookingStatus
            </td>
        </tr>
    }

</table>


